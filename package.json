{
  "name": "urls-shortener",
  "version": "1.0.0",
  "description": "A simple URL shortener",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "tsc && yarn copy-certs",
    "docker:build": "docker build -t talent-o/backend-api .",
    "db:up": "docker-compose up -d",
    "db:create": "sequelize db:create",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:migrate:all": "sequelize db:migrate:undo:all",
    "dev": "cross-env NODE_ENV=dev && ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "docker:dev": "docker compose --env-file ./.env.dev -f docker-compose.dev.yaml up",
    "docker:dev:generate": "docker exec -it Talent-O-Dev-API yarn sequelize migration:generate --name",
    "docker:dev:migrate": "docker exec -it Talent-O-Dev-API yarn sequelize db:migrate",
    "docker:dev:revert": "docker exec -it Talent-O-Dev-API yarn sequelize db:migrate:undo",
    "docker:prod": "docker compose --env-file ./.env.prod -f docker-compose.prod.yaml up",
    "docker:test": "docker compose --env-file ./.env.test -f docker-compose.testing.yaml up",
    "generate:migration": "yarn sequelize migration:generate --name",
    "migrate": "yarn sequelize-cli db:migrate",
    "migrate-undo": " yarn sequelize-cli db:migrate:undo",
    "migrate-undo-all": "yarn sequelize-cli db:migrate:undo:all",
    "seed": "yarn sequelize-cli db:seed:all",
    "seed-undo": "yarn sequelize-cli db:seed:undo",
    "seed-undo-all": "yarn sequelize-cli db:seed:undo:all",
    "migrate:up": "yarn ",
    "copy-certs": "mkdir -p dist/src/database/connection/certs && cp src/database/connection/certs/*.pem dist/src/database/connection/certs/"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1",
    "@types/copyfiles": "^2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1",
    "@types/jsonwebtoken": "^9",
    "@types/morgan": "^1",
    "@types/multer": "^1",
    "@types/node": "^22.7.5",
    "@types/passport": "^0",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8",
    "@types/validator": "^13.12.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.693.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node": "^20.18.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.4",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "umzug": "^3.8.2",
    "zod": "^3.23.8"
  },
  "resolutions": {
    "d2/left-pad": "1.1.1"
  }
}
